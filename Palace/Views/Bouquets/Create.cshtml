@{
  Layout = "_Layout";
}
@model Palace.Models.Bouquet

<h2>Add a Bouquet</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />
  @Html.LabelFor(model => model.Size)
  @Html.DropDownListFor(model => model.Size, new SelectList(new[]
  {
    new SelectListItem { Text = "Small", Value = "Small"},
    new SelectListItem { Text = "Medium", Value = "Medium"},
    new SelectListItem { Text = "Large", Value = "Large"},
    new SelectListItem { Text = "X-Large", Value = "X-Large"},
  }, "Value", "Text"), "Select Size")
  @Html.ValidationMessageFor(model => model.Size, "")
  <input type="submit" value="Create"  />
}