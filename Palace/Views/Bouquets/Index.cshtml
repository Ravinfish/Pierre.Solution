@{
  Layout = "_Layout";
}

@using Palace.Models;
@model List<Palace.Models.Bouquet>;
<h1>Bouquet List</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>No Bouquets have been added yet..</h3>
}
else
{
  @foreach (Bouquet bouquet in Model)
  {
    <h4>@Html.ActionLink($"{bouquet.Name}", "Details", new { id = bouquet.BouquetId })
    </h4>
  }
}
<hr />
<p>@Html.ActionLink("Add Bouquet", "Create")</p>