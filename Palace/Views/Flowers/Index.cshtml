@{
  Layout = "_Layout";
}

@using Palace.Models;
@model List<Palace.Models.Flower>;
<h1>Flower List</h1>
<hr />
@if (@Model.Count == 0)
{
  <h3>No flowers have been added yet..</h3>
}
else
{
  @foreach (Flower flower in Model)
  {
    <h4>@Html.ActionLink($"{flower.Name}", "Details", new { id = flower.FlowerId })
    </h4>
  }
}
<hr />
<p>@Html.ActionLink("Add Flower", "Create")</p>